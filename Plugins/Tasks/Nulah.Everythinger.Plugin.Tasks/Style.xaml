<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Nulah.Everythinger.Plugins.Tasks"
    xmlns:System="clr-namespace:System;assembly=System.Runtime">

    <SolidColorBrush x:Key="ControlBackgroundDark" Color="#FF3A3A3A"/>
    <SolidColorBrush x:Key="ControlBackgroundDark2" Color="#FF707070"/>
    <SolidColorBrush x:Key="ControlTextForeground1" Color="White"/>
    <SolidColorBrush x:Key="ControlTextForegroundDark" Color="#FF000000"/>
    <SolidColorBrush x:Key="BorderColour1" Color="#FF707070"/>
    <System:Double x:Key="TextHeadingSize1">18</System:Double>
    <System:Double x:Key="TextHeadingSize2">16</System:Double>
    <LinearGradientBrush x:Key="ControlBackgroundGradient1" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="#FF505050"/>
        <GradientStop Color="#FF555555" Offset="0.05"/>
        <GradientStop Color="#FF616161" Offset="0.95"/>
        <GradientStop Color="#FF555555" Offset="1"/>
    </LinearGradientBrush>
    <TextTrimming x:Key="TextBlockTextTrimming">CharacterEllipsis</TextTrimming>
</ResourceDictionary>